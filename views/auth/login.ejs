<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/loginStyles.css" />
</head>

<body>
    <div class="cont_principal">
        <div class="cont_centrar">
            <div class="cont_login">
                <% if (success_msg) { %>
                    <div class="alert alert-success text-white">
                        <%= success_msg %>
                    </div>
                    <% } %>
                        <% if (error_msg) { %>
                            <div class="alert alert-error text-white">
                                <%= error_msg %>
                            </div>
                            <% } %>
                                <form id="authForm" action="/auth/login" method="post">
                                    <ul class="ul_tabs">
                                        <li class="active">
                                            <a href="#">SIGN IN</a>
                                            <span class="linea_bajo_nom"></span>
                                        </li>
                                        <li>
                                            <a href="/auth/signup">SIGN UP</a><span class="linea_bajo_nom"></span>
                                        </li>
                                    </ul>
                                    <div class="cont_text_inputs">
                                        <input type="email" id="email" class="input_form_sign d_block active_inp"
                                            placeholder="Email" name="email" required />
                                        <input type="password" id="password" class="input_form_sign d_block active_inp"
                                            placeholder="Password" name="password" required />
                                    </div>
                                    <div class="btm_form">
                                        <button type="submit" class="btn_sign">SIGN IN</button>
                                        <div class="link_container">
                                            <a href="/auth/forgot-password" class="link_forgot_pass d_block">forgot your
                                                password ?</a>
                                        </div>
                                    </div>
                                </form>
            </div>
        </div>
    </div>
</body>

</html>