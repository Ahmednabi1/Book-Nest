<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Rentals</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/myBooksStyles.css">
    <link rel="stylesheet" href="/css/myRentalsStyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <nav class="navbar">
        <div class="navbar-container">
            <div class="logo"><a href="/dashboard"><i class="fa-solid fa-house-chimney"></i> Home</a></div>
            <ul class="nav-items">
                <li><a href="/books/addBooks"><i class="fa-solid fa-plus"></i> Add Book</a></li>
                <li><a href="/myBooks"><i class="fa-solid fa-book"></i> My Books</a></li>
                <li><a href="/books/allBooks"><i class="fa-solid fa-book-open"></i> Browse Books</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1 class="page-title text-center"><i class="fa-solid fa-rectangle-list"></i> My Rental History</h1>
        <div class="row rentals-list">
            <% if (rentals.length> 0) { %>
                <% rentals.forEach(rental=> { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="book-card">
                            <h2 class="book-title"><i class="fa-solid fa-book"></i>
                                <%= rental.Book.title %>
                            </h2>
                            <p class="book-author"><strong><i class="fa-solid fa-user"></i> Author:</strong>
                                <%= rental.Book.author %>
                            </p>
                            <p class="rental-dates"><strong><i class="fa-solid fa-calendar-alt"></i> Start
                                    Date:</strong>
                                <%= new Date(rental.start_date).toDateString() %>
                            </p>
                            <p class="rental-dates"><strong><i class="fa-solid fa-calendar-check"></i> End
                                    Date:</strong>
                                <%= new Date(rental.end_date).toDateString() %>
                            </p>
                            <p class="rental-status"><strong><i class="fa-solid fa-info-circle"></i> Status:</strong>
                                <%= rental.returned ? 'Returned' : 'Rented' %>
                            </p>

                            <div class="frm-btn">
                                <% if (!rental.returned) { %>
                                    <form action="/rentals/return/<%= rental.id %>" method="POST">
                                        <button type="submit" class="return-button"> <span>Return this Book <i
                                                    class="fa-solid fa-undo"></i></span></button> <!-- Use Btn class -->
                                    </form>
                                    <% } %>

                                        <button class="rate"><a href="/rentals/rate/<%= rental.Book.id %>"
                                                class="rate-link"><i class="fa-solid fa-star"></i> Rate and Review this
                                                Book</a></button><!-- Use Btn class -->
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-center"><i class="fa-solid fa-exclamation-circle"></i> You have not rented
                                any books yet.</p>
                            <% } %>
        </div>
    </div>
</body>

</html>